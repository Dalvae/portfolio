---
import Layout from '../layouts/Layout.astro';
import projectsData from '../data/projects-data.json';
import TechnologyIcon from '../components/TechnologyIcon.astro'; 
import type { Props as TechnologyIconProps } from '../components/TechnologyIcon.astro'; 
import TechSlider from '../components/TechSlider.astro';
import Avatar from '../components/Avatar.astro'
import ProjectCard from '../components/ProjectCard.astro'
import ProjectSection from '../components/ProjectSection.astro'
import UpworkIcon from '../components/UpworkIcon.astro'
---

<Layout>
  <!-- Make hero section compact to fit first viewport with carousel -->
  <div class="container mx-auto px-4 pt-8 pb-6 text-center">

      <Avatar/> 
  <!-- Imagen de perfil -->

    <h1 class="text-4xl sm:text-5xl font-bold text-label-primary mt-3 mb-2">Diego Alvarez</h1>
    <p class="text-xl sm:text-2xl text-accent font-semibold mt-0.5">Full Stack Developer</p>

    <!-- Tighter social spacing -->
    <section id="social" class="mt-6 mb-8 text-center">
      <div class="flex justify-center gap-5 sm:gap-8">
        <TechnologyIcon type="github" link="https://github.com/Dalvae/" className="w-10 h-10" />
        <TechnologyIcon type="email" link="mailto:diego.alvarez.e@ug.uchile.cl" className="w-10 h-10" />
        <TechnologyIcon type="linkedin" link="https://www.linkedin.com/in/diego-alvarez-espinoza/" className="w-10 h-10" />
        <TechnologyIcon type="upwork" link="https://www.upwork.com/freelancers/~01911ef1e05ea67391?mp_source=share" className="w-10 h-10" />
      </div>
    </section>
  </div>

  <!-- Reduce gaps around sliders/sections to keep first screen dense -->
  <div class="mt-2 sticky bottom-0 left-0 right-0 z-40 backdrop-blur-sm supports-[backdrop-filter]:bg-background-primary/40 bg-background-primary/55">
    <TechSlider/>
  </div>

  <div class="mt-6">
    <ProjectSection/>
  </div>


  <footer class="text-center py-10 mt-16 border-t border-separator-opaque">
    <p class="text-label-secondary">&copy; {new Date().getFullYear()} Diego Alvarez. All rights reserved.</p>
  </footer>
</Layout>

